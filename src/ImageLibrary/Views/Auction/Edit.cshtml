@model ImageLibrary.Models.EditAuctionViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    @Styles.Render("~/Styles")
}
@section scripts {
    @Scripts.Render("~/Scripts")
    @Scripts.Render("~/bundles/jqueryval")
}

<div class="container">
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home m-r-5"></i>Home</a></li>
        <li><a href="@Url.Action("Index", "Auction")"><i class="fa fa-home m-r-5"></i>Auction</a></li>
        <li>Edit</li>
    </ul>
</div>

<section class="m-t-0">
    <div class="container">
        <div class="thumb p-30">
            <div id="content">
                @using (Html.BeginForm("Edit", "Auction", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    @Html.HiddenFor(m => m.Id)
                    <fieldset id="account">
                        <legend>Update Auction</legend>
                        <div class="form-group required">
                            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-item" })
                            </div>
                        </div>
                        <div class="form-group required">
                            @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Description, new { @class = "form-control form-item" })
                            </div>
                        </div>
                        <div class="form-group required">
                            <div class="col-sm-10">
                                @Html.CheckBoxFor(m => m.PrimaryBanner)
                                @Html.LabelFor(m => m.PrimaryBanner)
                            </div>
                        </div>
                        <div class="form-group required">
                            <div class="col-sm-10">
                                @Html.CheckBoxFor(m => m.SecondaryBanner)
                                @Html.LabelFor(m => m.SecondaryBanner)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn ht-btn bg-4 m-t-10" value="Update" />
                            </div>
                        </div>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</section>



<section class="process">
    <div class="container">
        <div class="row m-l-r-5">
            <div class="col-sm-6 col-md-3 p-5">
                <div class="media ht-media">
                    <div class="media-left">
                        <i class="fa fa-cogs color-3"></i>
                    </div>
                    <div class="media-body">
                        <h5 class="media-heading color-3">Settings</h5>
                        Registered Users
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-3 p-5">
                <div class="media ht-media">
                    <div class="media-left">
                        <i class="fa fa-image color-7"></i>
                    </div>
                    <div class="media-body">
                        <h5 class="media-heading color-7">Pictures</h5>
                        Manage Images
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-3 p-5">
                <div class="media ht-media">
                    <div class="media-left">
                        <i class="fa fa-money color-4"></i>
                    </div>
                    <div class="media-body">
                        <h5 class="media-heading color-4">Payments</h5>
                        Buyers/Sellers
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-3 p-5">
                <div class="media ht-media">
                    <div class="media-left">
                        <i class="fa fa-legal color-5"></i>
                    </div>
                    <div class="media-body">
                        <h5 class="media-heading color-5">Auctions</h5>
                        Manage Items
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>