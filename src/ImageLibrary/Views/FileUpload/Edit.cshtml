@model ImageLibrary.Models.AuctionFilesViewModel
@using ImageLibrary.Helpers
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    @Styles.Render("~/Styles")
    @Styles.Render("~/Content/jQuery-File-Upload")
}
@section scripts {
    @Scripts.Render("~/Scripts")
    @Scripts.Render("~/bundles/jQuery-File-Upload")
}

<script>
    var $form = null;
    var url = window.location.pathname;
    var id = url.substring(url.lastIndexOf('/') + 1);
    $(function () {

        $form = $('#fileupload').fileupload({
            dataType: 'json'
        });

    });
    $('#fileupload').addClass('fileupload-processing');



    $.ajax({
        type: 'GET',
        contentType: "application/json; charset=utf-8",
        url: '/FileUpload/GetFileList/' + id,
        success: function (data) {


            $('#fileupload').fileupload('option', 'done').call($('#fileupload'), $.Event('done'), { result: { files: data.files } })
            $('#fileupload').removeClass('fileupload-processing');
        }

    }

    );
</script>
<section class="m-t-0">
    <div class="container">
        <div class="thumb p-30">
            <div class="row">
                <div class="col-sm-12">
                    @Html.Partial("~/Views/FileUpload/_Files.cshtml", Model)
                </div>
            </div>
        </div>
    </div>
</section>
